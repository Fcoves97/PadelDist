<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_screen_background_image"
    tools:context=".PartidasScreen">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vwTimeTable"
        android:layout_width="315dp"
        android:layout_height="539dp"
        android:background="@drawable/rounded_border"
        android:radius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.673">

    </View>

    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SISTEMA DE PARTIDAS"
        android:textColor="@color/customWhite"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwTimeTable"
        app:layout_constraintEnd_toEndOf="@+id/vwTimeTable"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/vwTimeTable"
        app:layout_constraintTop_toTopOf="@+id/vwTimeTable"
        app:layout_constraintVertical_bias="0.093" />

    <TextView
        android:id="@+id/tvBienvenido_text"
        android:layout_width="240dp"
        android:layout_height="141dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:lineSpacingExtra="9dp"
        android:text="@string/sistema_partidas_msg"
        android:textColor="@color/customWhite"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwTimeTable"
        app:layout_constraintEnd_toEndOf="@+id/vwTimeTable"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/vwTimeTable"
        app:layout_constraintTop_toBottomOf="@+id/tvBienvenido"
        app:layout_constraintVertical_bias="0.032" />

    <ImageButton
        android:id="@+id/btnOpenMenu"
        android:layout_width="53dp"
        android:layout_height="46dp"
        android:layout_gravity="start"
        android:background="#30000000"
        android:padding="15dp"
        android:contentDescription="Open menu"
        android:src="@drawable/menu_icon_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/dlMenu"
        android:layout_width="270dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <include layout="@layout/menu_layout" />

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>