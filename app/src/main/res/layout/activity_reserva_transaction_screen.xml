<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_screen_background_image"
    tools:context=".ReservaTransactionScreen">

    <View
        android:id="@+id/vwRegister"
        android:layout_width="370dp"
        android:layout_height="554dp"
        android:background="@drawable/rounded_border"
        android:radius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="235dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:background="@drawable/table_border"
        android:gravity="center"
        android:padding="10dp"
        android:text="RESERVA DE PISTA"
        android:textColor="@color/customWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/vwRegister"
        app:layout_constraintTop_toTopOf="@+id/vwRegister"
        app:layout_constraintVertical_bias="0.056" />

    <ImageView
        android:id="@+id/imagePista"
        android:layout_width="150sp"
        android:layout_height="175sp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_style"
        android:scaleType="centerCrop"
        android:src="@drawable/pista_image"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="@+id/vwRegister"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/tvPistaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="PISTA 1"
        android:textColor="@color/customWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toEndOf="@+id/imagePista"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/tvFechaValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="11/06/2023"
        android:textColor="@color/customWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toEndOf="@+id/imagePista"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaText"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/tvFechaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Día de la reserva"
        android:textColor="@color/customWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toEndOf="@+id/imagePista"
        app:layout_constraintTop_toBottomOf="@+id/tvPistaId"
        app:layout_constraintVertical_bias="0.14" />

    <TextView
        android:id="@+id/tvDuraciontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Duración de la reserva"
        android:textColor="@color/customWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toStartOf="@+id/vwRegister"
        app:layout_constraintTop_toBottomOf="@+id/imagePista"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/tvDuracionValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="1 hora"
        android:textColor="@color/customWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintStart_toEndOf="@+id/tvDuraciontext"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaValue"
        app:layout_constraintVertical_bias="0.078" />

    <TextView
        android:id="@+id/tvFechaInicioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hora de inicio"
        android:textColor="@color/customWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="@+id/vwRegister"
        app:layout_constraintTop_toBottomOf="@+id/tvDuraciontext"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvFechaInicioValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="08:00"
        android:textColor="@color/customWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.729"
        app:layout_constraintStart_toEndOf="@+id/tvFechaInicioText"
        app:layout_constraintTop_toBottomOf="@+id/tvDuracionValue"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvFechaFinalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hora de Final"
        android:textColor="@color/customWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="@+id/vwRegister"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaInicioText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvFechaFinalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="09:00"
        android:textColor="@color/customWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.734"
        app:layout_constraintStart_toEndOf="@+id/tvFechaFinalText"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaInicioValue"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvValorTotalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Coste Total"
        android:textColor="@color/customWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="@+id/vwRegister"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaFinalText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvValorTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="2 €"
        android:textColor="@color/customWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.691"
        app:layout_constraintStart_toEndOf="@+id/tvValorTotalText"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaFinalValue"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvJugadorReservaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="A nombre de:"
        android:textColor="@color/customWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="@+id/vwRegister"
        app:layout_constraintTop_toBottomOf="@+id/tvValorTotalText"
        app:layout_constraintVertical_bias="0.672" />

    <TextView
        android:id="@+id/tvJugadorReservaValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="paquito"
        android:textColor="@color/customWhite"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvJugadorReservaText"
        app:layout_constraintTop_toBottomOf="@+id/tvValorTotalText"
        app:layout_constraintVertical_bias="0.672" />

    <Button
        android:id="@+id/btnReservar"
        android:layout_width="128dp"
        android:layout_height="59dp"
        android:text="RESERVAR"
        app:layout_constraintBottom_toBottomOf="@+id/vwRegister"
        app:layout_constraintEnd_toEndOf="@+id/vwRegister"
        app:layout_constraintHorizontal_bias="0.723"
        app:layout_constraintStart_toEndOf="@+id/tvJugadorReservaValue"
        app:layout_constraintTop_toBottomOf="@+id/tvValorTotalValue"
        app:layout_constraintVertical_bias="0.485" />


</androidx.constraintlayout.widget.ConstraintLayout>