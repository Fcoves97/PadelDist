<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@drawable/login_screen_background_image"
    tools:context=".SettingsScreen">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57" />

    <ImageButton
        android:id="@+id/btnOpenMenu"
        android:layout_width="53dp"
        android:layout_height="46dp"
        android:layout_gravity="start"
        android:background="#30000000"
        android:padding="15dp"
        android:contentDescription="Open menu"
        android:src="@drawable/menu_icon_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/vwTimeTable"
        android:layout_width="315dp"
        android:layout_height="539dp"
        android:background="@drawable/rounded_border"
        android:radius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.804">

    </View>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="235dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:background="@drawable/table_border"
        android:gravity="center"
        android:padding="10dp"
        android:text="CONFIGURACIÃ“N"
        android:textColor="@color/customWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwTimeTable"
        app:layout_constraintEnd_toEndOf="@+id/vwTimeTable"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/vwTimeTable"
        app:layout_constraintTop_toTopOf="@+id/vwTimeTable"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="153dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Volumen general"
        android:textColor="@color/customWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwTimeTable"
        app:layout_constraintEnd_toEndOf="@+id/vwTimeTable"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/vwTimeTable"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.039" />


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        style="@style/SeekBarStyle"
        app:layout_constraintBottom_toBottomOf="@+id/vwTimeTable"
        app:layout_constraintEnd_toEndOf="@+id/vwTimeTable"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/vwTimeTable"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="153dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Notificar partidas"
        android:textColor="@color/customWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwTimeTable"
        app:layout_constraintEnd_toEndOf="@+id/vwTimeTable"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="@+id/vwTimeTable"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.264" />

    <CheckBox
        android:id="@+id/cbNotificar"
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:checked="false"
        android:scaleX="1.3"
        android:scaleY="1.3"
        app:layout_constraintBottom_toBottomOf="@+id/vwTimeTable"
        app:layout_constraintEnd_toEndOf="@+id/vwTimeTable"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintVertical_bias="0.068" />

    <RadioGroup
        android:id="@+id/radioGroupTheme"
        android:layout_width="246dp"
        android:layout_height="36dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/vwTimeTable"
        app:layout_constraintEnd_toEndOf="@+id/vwTimeTable"
        app:layout_constraintStart_toStartOf="@+id/vwTimeTable"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.068">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lightBrown"
            android:paddingStart="5sp"
            android:paddingEnd="15sp"
            android:text="Tema Claro"
            android:textColor="@color/customWhite" />

        <RadioButton
            android:id="@+id/radioButtonDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lightBrown"
            android:paddingStart="5sp"
            android:text="Tema Oscuro"
            android:textColor="@color/customWhite" />

    </RadioGroup>

    <Button
        android:id="@+id/btnAplicar"
        android:layout_width="127dp"
        android:layout_height="52dp"
        android:text="APLICAR"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/vwTimeTable"
        app:layout_constraintEnd_toEndOf="@+id/vwTimeTable"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="@+id/vwTimeTable"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupTheme"
        app:layout_constraintVertical_bias="0.932" />

    <androidx.drawerlayout.widget.DrawerLayout
         android:id="@+id/dlMenu"
         android:layout_width="200dp"
         android:layout_height="0dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/toolbar">

         <include layout="@layout/menu_layout" />

     </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>