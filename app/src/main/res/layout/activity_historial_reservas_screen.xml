<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@drawable/login_screen_background_image"
    tools:context=".HistorialReservasScreen">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57" />

    <View
        android:id="@+id/vwTimeTable"
        android:layout_width="368dp"
        android:layout_height="548dp"
        android:background="@drawable/rounded_border"
        android:radius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.826">

    </View>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="235dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:background="@drawable/table_border"
        android:gravity="center"
        android:padding="10dp"
        android:text="HISTORIAL DE RESERVAS"
        android:textColor="@color/customWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/vwTimeTable"
        app:layout_constraintEnd_toEndOf="@+id/vwTimeTable"
        app:layout_constraintStart_toStartOf="@+id/vwTimeTable"
        app:layout_constraintTop_toTopOf="@+id/vwTimeTable"
        app:layout_constraintVertical_bias="0.052" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="366dp"
        android:layout_height="458dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/vwTimeTable"
        app:layout_constraintEnd_toEndOf="@+id/vwTimeTable"
        app:layout_constraintStart_toStartOf="@+id/vwTimeTable"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageButton
        android:id="@+id/btnOpenMenu"
        android:layout_width="53dp"
        android:layout_height="46dp"
        android:layout_gravity="start"
        android:background="#30000000"
        android:padding="15dp"
        android:contentDescription="Open menu"
        android:src="@drawable/menu_icon_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/dlMenu"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <include layout="@layout/menu_layout" />

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>